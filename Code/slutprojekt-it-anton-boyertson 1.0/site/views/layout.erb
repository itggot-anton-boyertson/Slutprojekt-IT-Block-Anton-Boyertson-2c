<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>ToDo-List</title>
  <link rel="stylesheet" type="text/css" href="/css/index.css">
  <link rel="icon" href="/img/topicon.gif">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.indigo-pink.min.css">
  <script defer src="https://code.getmdl.io/1.1.3/material.min.js"></script>
</head>
<body>
<div id="container">
  <header id="header">
    <nav>
      <a href="/">Home</a>
      <a href="/contacts">Contacts</a>
      <img id="imglogo" src="/img/logo.png">
      <% if @current_user %>
          <a href="/settings" id="settings">Settings</a>
          <div>
            <form method="post" action="/logout">
              <button type="submit" id="logout">Log Out</button>
            </form>
          </div>
      <% else %>
      <div id="login">
        <form action="/login" method="post">
          <div class="inputs">
            <input type="text" name="username" placeholder="Username">
            <input type="password" name="password" placeholder="Password">
          </div>
          <button type="submit">Login</button>
        </form>
      </div>
      <div>
        <form action="/register" method="get">
          <button type="submit"  id="register">Register</button>
        </form>
      </div>
      <% end %>
    </nav>
  </header>
  <div id="grillkorv">
    <%= yield %>
  </div>
  <div id="bottombar1">
  <div id="bottombar">
    <a href="https://twitter.com/signup"><img  class="socialogo" src="/img/twitterlogo.png"></a>
    <a href="https://www.facebook.com/pages/create/"><img  class="socialogo" src="/img/facebooklogo.png"></a>
    <a href="https://www.instagram.com/"><img  class="socialogo" src="/img/instagramlogo.png"></a>
  </div></div>
</div>
</body>
</html>



